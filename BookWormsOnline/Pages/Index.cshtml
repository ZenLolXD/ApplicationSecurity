@page
@model BookWormsOnline.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Modern UI Styling (Consistent with Login Page) -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .welcome-header {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #06402b;
        margin-top: 40px;
    }

    .profile-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 60vh;
    }

    .profile-card {
        background: #ffffff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 500px;
        text-align: center;
    }

    .profile-pic {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 20px;
        border: 4px solid #06402b;
    }

    .profile-name {
        font-size: 22px;
        font-weight: bold;
        color: #06402b;
        margin-bottom: 5px;
    }

    .profile-email {
        font-size: 16px;
        color: #555;
        margin-bottom: 15px;
    }

    .card-details {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        font-size: 16px;
        font-weight: bold;
        color: #06402b;
        display: inline-block;
        margin-top: 15px;
        word-spacing: 5px;
    }

    .card-label {
        font-size: 14px;
        color: #777;
        margin-top: 10px;
    }

    /* New styles for contact details */
    .contact-details {
        margin-top: 20px;
        text-align: left;
        font-size: 16px;
        color: #06402b;
    }
    
    .contact-item {
        margin: 8px 0;
    }
    
    .contact-label {
        font-weight: bold;
        margin-right: 5px;
    }
</style>

<!-- Welcome Header -->
<div class="welcome-header">
    Welcome, @Model.CurrentUser.FirstName! 📖
</div>

<!-- Profile Card -->
<div class="profile-container">
    <div class="profile-card">
        <img src="@Model.CurrentUser.PhotoPath" alt="Profile Picture" class="profile-pic">
        <div class="profile-name">@Model.CurrentUser.FirstName @Model.CurrentUser.LastName</div>
        <div class="profile-email">@Model.CurrentUser.Email</div>
        
        <!-- Display Decrypted Credit Card -->
        <div class="card-label">Your Registered Credit Card:</div>
        <div class="card-details">
            @Model.CurrentUser.DecryptCreditCard()
        </div>

        <!-- New Contact Details Section -->
        <div class="contact-details">
            <div class="contact-item">
                <span class="contact-label">Mobile No:</span> @Model.CurrentUser.MobileNo
            </div>
            <div class="contact-item">
                <span class="contact-label">Billing Address:</span> @Model.CurrentUser.BillingAddress
            </div>
            <div class="contact-item">
                <span class="contact-label">Shipping Address:</span> @Model.CurrentUser.ShippingAddress
            </div>
            <div>
                <a href="/ChangePassword" class="btn btn-warning">Change Password</a>
            </div>
        </div>
    </div>
</div>
