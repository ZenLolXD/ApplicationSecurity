@page
@model BookWormsOnline.Pages.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<!-- Modern UI for Forgot Password Page -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .header {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #06402b;
        margin-top: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .header img {
        width: 32px;
        height: 32px;
    }

    .container-center {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 50vh;
    }

    .card {
        background: #ffffff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 420px;
        text-align: center;
    }

    .card h3 {
        color: #06402b;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-control {
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: #06402b;
        outline: none;
        box-shadow: 0 0 5px rgba(6, 64, 43, 0.2);
    }

    .btn-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #06402b;
        border: none;
        color: white;
        padding: 12px;
        width: 100%;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #053d23;
    }

    .btn-secondary {
        background-color: #a0a0a0;
        border: none;
        color: white;
        padding: 12px;
        width: 100%;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #888888;
    }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        border-radius: 5px;
    }

    .alert-info {
        background-color: #e3f2fd;
        color: #06402b;
        font-size: 14px;
    }
</style>

<!-- Header -->
<div class="header">
    Forgot Password <img src="https://cdn-icons-png.flaticon.com/512/483/483408.png" alt="key-icon">
</div>

<!-- Forgot Password Form -->
<div class="container-center">
    <div class="card">
        <h3>Recover Your Account</h3>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info">@Model.Message</div>
        }

        <form method="post">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter your email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn-primary">Send Reset Link</button>
                <a asp-page="Login" class="btn-secondary">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
