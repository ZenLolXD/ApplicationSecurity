@page "{token?}"
@model BookWormsOnline.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<!-- Modern UI for Reset Password Page -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .header {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #06402b;
        margin-top: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .header img {
        width: 28px;
        height: 28px;
    }

    .container-center {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 50vh;
    }

    .card {
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 420px;
        text-align: center;
    }

    .card h3 {
        color: #06402b;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

    .form-control {
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        border-color: #06402b;
        outline: none;
        box-shadow: 0 0 5px rgba(6, 64, 43, 0.3);
    }

    .btn-container {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #06402b;
        border: none;
        color: white;
        padding: 14px;
        width: 100%;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #053d23;
    }

    .btn-secondary {
        background-color: #a0a0a0;
        border: none;
        color: white;
        padding: 14px;
        width: 100%;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
        background-color: #888888;
    }

    .alert {
        margin-bottom: 20px;
        padding: 10px;
        border-radius: 5px;
    }

    .alert-danger {
        background-color: #ffebee;
        color: #c62828;
        font-size: 14px;
    }
</style>

<!-- Header -->
<div class="header">
    Reset Your Password <img src="https://cdn-icons-png.flaticon.com/512/483/483408.png" alt="lock-icon">
</div>

<!-- Reset Password Form -->
<div class="container-center">
    <div class="card">
        <h3>Enter a New Password</h3>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-danger">@Model.Message</div>
        }

        <form method="post">
            <input type="hidden" asp-for="Token" />

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" asp-for="NewPassword" class="form-control" placeholder="Enter new password" required />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="btn-container">
                <button type="submit" class="btn-primary">Reset Password</button>
                <a asp-page="Login" class="btn-secondary">Back to Login</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
