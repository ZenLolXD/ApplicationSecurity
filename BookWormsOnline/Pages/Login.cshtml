@page
@model BookWormsOnline.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!-- reCAPTCHA Script -->
<script src="https://www.google.com/recaptcha/api.js?render=6LfG6dMqAAAAAN-F3IHT3KJap6U7hi522s8AlK2K"></script>

<!-- Modern UI for Login Page -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .welcome-header {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #06402b;
        margin-top: 40px;
    }

    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 50vh;
    }

    .login-card {
        background: #ffffff;
        padding: 50px 40px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 420px;
        min-height: 380px;
        text-align: center;
    }

    .login-card h3 {
        color: #06402b;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        font-size: 14px;
    }

    .btn-login {
        background-color: #06402b;
        border: none;
        color: white;
        padding: 14px;
        width: 100%;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-login:hover {
        background-color: #053d23;
    }

    .error-message {
        color: red;
        font-size: 14px;
        margin-bottom: 10px;
    }

    .signup-link {
        margin-top: 20px;
        font-size: 14px;
    }

    .signup-link a {
        color: #06402b;
        font-weight: bold;
        text-decoration: none;
    }

    .signup-link a:hover {
        text-decoration: underline;
    }
</style>

<!-- Welcome Header -->
<div class="welcome-header">
    Welcome to BookWorms Online ðŸ“š
</div>

<!-- Login Form -->
<div class="login-container">
    <div class="login-card">
        <h3>Login to Your Account</h3>

        <form id="login-form" method="post">
            @Html.AntiForgeryToken()
            
            <div class="form-group">
                <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" id="email" required>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password" id="password" required>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <p class="forgot-password">
    <a asp-page="ForgotPassword">Forgot your password?</a>
</p>


            <!-- Hidden input to store reCAPTCHA token -->
            <input type="hidden" id="recaptchaToken" name="RecaptchaToken" />

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <p class="error-message">@Model.ErrorMessage</p>
            }

            <button type="button" id="login-btn" class="btn btn-login">Login</button>
        </form>

        <p class="signup-link">
            Don't have an account? <a asp-page="Register">Sign up</a>
        </p>
    </div>
</div>

<script type="text/javascript">
    @Html.Raw(@"
document.getElementById('login-btn').addEventListener('click', function (event) {
    event.preventDefault();
    var email = document.getElementById('email').value.trim();
    var password = document.getElementById('password').value.trim();

    // Email Validation
    var emailPattern = /^[^@\s]+@[^@\s]+\.[^@\s]+$/;
    if (!emailPattern.test(email)) {
        alert('Invalid email format.');
        return;
    }


    // Execute reCAPTCHA and submit form on success
    grecaptcha.ready(function () {
        grecaptcha.execute('6LfG6dMqAAAAAN-F3IHT3KJap6U7hi522s8AlK2K', { action: 'login' })
            .then(function (token) {
                document.getElementById('recaptchaToken').value = token;
                document.getElementById('login-form').submit();
            })
            .catch(function (error) {
                console.error('reCAPTCHA execution failed:', error);
                alert('reCAPTCHA validation failed. Please refresh the page and try again.');
            });
    });
});
")
</script>

