@page
@model BookWormsOnline.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<!-- Modern UI for Change Password Page -->
<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .welcome-header {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #06402b;
        margin-top: 40px;
    }

    .password-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 60vh;
    }

    .password-card {
        background: #ffffff;
        padding: 50px 40px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 420px;
        min-height: 400px;
        text-align: center;
    }

    .password-card h3 {
        color: #06402b;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        width: 100%;
        font-size: 14px;
    }

    .btn-change-password {
        background-color: #06402b;
        border: none;
        color: white;
        padding: 14px;
        width: 100%;
        border-radius: 5px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-change-password:hover {
        background-color: #053d23;
    }

    .error-message {
        color: red;
        font-size: 14px;
        margin-bottom: 10px;
    }
</style>

<!-- Welcome Header -->
<div class="welcome-header">
    Update Your Password ðŸ”’
</div>

<!-- Change Password Form -->
<div class="password-container">
    <div class="password-card">
        <h3>Change Password</h3>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="form-group">
                <input type="password" id="OldPassword" asp-for="OldPassword" class="form-control" placeholder="Enter Old Password" required />
            </div>

            <div class="form-group">
                <input type="password" id="NewPassword" asp-for="NewPassword" class="form-control" placeholder="Enter New Password" required />
            </div>

            <div class="form-group">
                <input type="password" id="ConfirmNewPassword" asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm New Password" required />
            </div>

            <button type="submit" class="btn btn-change-password">Update Password</button>
        </form>
    </div>
</div>
